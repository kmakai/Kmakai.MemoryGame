            cardDisplayList[i + 1] = new Card()
                {
                    Image = card.Image,
                    Name = card.Name,
                    IsFlipped = card.IsFlipped,
                    IsMatched = card.IsMatched
                };

            i += 2;
        }

        ShuffleCards();

        playing = true;

        
    }


